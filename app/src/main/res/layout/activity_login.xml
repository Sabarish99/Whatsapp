<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:id="@+id/login_img"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_email"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_img"
                android:layout_marginTop="25dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:drawableStart="@drawable/email"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_passwd"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_email"
                android:layout_marginTop="25dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/inputs"
                android:padding="4dp"
                android:drawableStart="@drawable/password"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forget_passwd_link"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_passwd"
                android:layout_marginTop="2dp"
                android:text="Forget Password ?"
                android:layout_centerHorizontal="true"
                android:textAlignment="textEnd"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"

                android:padding="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_button"
                android:layout_below="@+id/forget_passwd_link"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:text="LOGIN"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="@android:color/background_light"
                android:background="@drawable/buttons"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/need_new_accnt_link"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/login_button"
                android:layout_marginTop="2dp"
                android:text="New Account ?"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"

                android:padding="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_id"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/need_new_accnt_link"
                android:layout_marginTop="25dp"
                android:text="Login using "
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textStyle="bold"


                android:padding="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="23dp"

                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_login_button"
                android:layout_below="@+id/login_id"
                android:padding="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:text="Phone"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"
                android:background="@drawable/buttons"
                android:drawableStart="@drawable/phone"
                android:layout_marginBottom="15dp"
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>